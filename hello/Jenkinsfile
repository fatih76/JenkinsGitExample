pipeline {
    agent any

    stages {
        stage('Git-Checkout') {           
            steps {
        	git branch: 'main', url: 'https://github.com/fatih76/JenkinsGitExample.git'
            }
        }   
   
        stage('Datei') {
            steps {
                echo 'Zu testende datei:'
                sh ''' cd hello
                python3.12 hello.py
                pwd '''
            }
        }   
    
        stage('Unittest') {
            steps {                
                sh ''' echo 'Unittest-DAtei'
                cd hello
                python3.12 test_hello.py '''
            }
        }    
   
        stage('Deploy') {
            steps {
                echo 'Deploying app'
                echo 'echo OK!'
            }
        }  
    } 
}
